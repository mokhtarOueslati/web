{% extends "@PIFront/Back/indexBack.html.twig" %}

{% block body %}
    <div>
        <class>
            <h1 class="first-city">Liste des Randonnees</h1>
        </class>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">

                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Description</th>
                                <th>image</th>
                                <th>Creer le :</th>


                            </tr>
                            </thead>
                            <tbody>
                            {% for pub in Randonnees %}
                                <tr>

                                    <td>{{ pub.text}}</td>

                                    <td> {% if pub.path != null %}<img style="width: 300px;height: 200px; margin-bottom: 10%" src="{{ asset("uploads/Randonnees/" ~ pub.path)}}"  >{% endif %}</td>

                                    <td>{{ pub.date|date("m/d/Y")}}</td>
                                    <td><button class="btn btn-round btn-danger btn-lg btn-lg" type="submit"><a href="{{ path('suppback', { 'id': pub.id }) }}">suprimer</a></button></td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </section>
            </div>
        </div>
    </div>
    </form>

{% endblock %}