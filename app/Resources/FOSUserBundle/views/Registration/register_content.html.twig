<link rel="stylesheet" href="{{ asset('frontOffice/css/bootstrap.min.css') }}" />
<link rel="stylesheet" href="{{ asset('frontOffice/css/style.css') }}" />
<link rel="stylesheet" href="{{ asset('frontOffice/css/ionicons.min.css') }}" />
<link rel="stylesheet" href="{{ asset('frontOffice/css/font-awesome.min.css') }}" />
<!--Google Webfont-->
<link href='https://fonts.googleapis.com/css?family=Raleway:400,100,100italic,200,200italic,300,300italic,400italic,500,500italic,600,600italic,700' rel='stylesheet' type='text/css'>
<!--Favicon-->
<link rel="shortcut icon" type="image/png" href="{{ asset('frontOffice/images/fav.png') }}"/>
<body id="banner">



<div class="sign-up-form"  >

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register','style':'width : 250px'}}) }}


    {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg','placeholder':'email'}}) }}<br>
    {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg','placeholder':'username','pattern':'.{5,40}','required title':'5 to 10 characters'}}) }}<br>
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg','placeholder':'password'}}) }}<br>
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg','placeholder':'repeate password'}}) }}<br>
    {{ form_widget(form.captcha,{'attr' : {'style':'color : #000'}}) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-round btn-warning btn-lg"/>
    </div>
        {{ form_end(form) }}

</div>

<div>

    <img class="form-shadow" src="{{ asset('frontOffice/images/bottom-shadow.png') }}" alt="" />
</div>
</body>
